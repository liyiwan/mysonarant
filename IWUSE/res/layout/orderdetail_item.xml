<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_product_uri"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:src="@drawable/sample2" 
        android:layout_weight="1.5"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" >

        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="TextView"/>

        <TextView
            android:id="@+id/txt_product_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txt_product_name"
            android:text="TextView" />

        <Button
            android:id="@+id/btn_color"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
             android:textSize="10dp"
            android:text="@string/color" />

        <Button
            android:id="@+id/btn_material"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/btn_color"
            android:textSize="10dp"
            android:text="@string/material" />

        <Button
            android:id="@+id/btn_size"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/btn_material"
             android:textSize="10dp"
            android:text="@string/size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="0.8" >

        <TextView
            android:id="@+id/txt_productamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$99999" />

        <TextView
            android:id="@+id/txt_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8888" />

    </LinearLayout>

</LinearLayout>