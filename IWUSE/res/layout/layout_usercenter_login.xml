<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

   <ImageView
            android:id="@+id/img_userlogin_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:src="@drawable/close_button" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/btn_switch_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/login" />

        <Button
            android:id="@+id/btn_switch_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/regist" />
    </LinearLayout>

    <ImageView
        android:id="@+id/log_iwuse"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/title_iwusetheme"
        android:src="@drawable/wusetheme_selected" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp" />
	<LinearLayout android:id="@+id/lay_switch_login"
	    android:layout_width="match_parent"
        		android:layout_height="match_parent" 
        		android:orientation="vertical" 
        		android:gravity="center_horizontal"
        		android:visibility="visible">
    <EditText
        android:id="@+id/edt_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="11"
        android:gravity="center"
        android:hint="@string/userid"
        android:inputType="phone" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="11"
        android:gravity="center"
        android:hint="@string/passward"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="@drawable/confirm" />
    <Button
        android:id="@+id/btn_login_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/testlogin"
        android:background="@drawable/confirm" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		
        <TextView
            android:id="@+id/txt_forgetuserinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/forgetuserinfo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_oauth_weichat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/socialize_wechat" />

        <ImageView
            android:id="@+id/img_oauth_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/socialize_qq_on" />

        <ImageView
            android:id="@+id/img_oauth_paybao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sina_weibo_logo"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_oauth_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sina_weibo_logo" />
    </LinearLayout>
	</LinearLayout>

	<LinearLayout 
	    android:id="@+id/lay_switch_regist"
	    android:layout_width="match_parent"
        		android:layout_height="match_parent" 
        		android:layout_marginTop="55dp"
        		android:orientation="vertical" 
        		android:gravity="center_horizontal"
        		android:visibility="gone">

		<EditText
		    android:id="@+id/edt_regist_userid"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:ems="11"
		    android:gravity="center"
		    android:hint="@string/userid"
		    android:inputType="phone" />

		<EditText
		    android:id="@+id/edt_regist_password"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:ems="11"
		    android:gravity="center"
		    android:hint="@string/passward"
		    android:inputType="textPassword" />

		<Button
		    android:id="@+id/btn_regist_connfirm"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="55dp"
		    android:background="@drawable/confirm" />
    </LinearLayout>
</LinearLayout>